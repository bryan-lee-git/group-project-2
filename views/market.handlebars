        <h3>Lira: <span id="lira-display">$$$$</span></h3>
      </div>
    </div>
 {{!-- weapons and armour collapsables --}}
    <div class="row">
      <div class="col s6">
          <ul class="collapsible">
            {{!-- heavy weapon collapsable --}}
            <li>
              <div class="collapsible-header">Heavy Weapons</div>
                <div class="collapsible-body">
                  <table id="heavy-weapon-table">
                    <thead>
                      <th>Weapon</th>
                      <th>Damage</th>
                      <th>Weight</th>
                      <th>Price</th>
                    </thead>

                  </table>
              </div>
