<br/><br/>
<div class="container rounded-content-box">
  <h1 class="page-title center-align">Your Account</h1>
    <header class="center-align">
      <div class="accountID">
        <h3>Welcome, {{userInfo.firstName}}</h3>
        <h5 id="account-number" data-accountemail="{{userInfo.email}}">Account email: {{userInfo.email}}</h5>
      </div>
      <h3 id="update-err-msg"></h3>
    </header>
    <hr>
    <br/>

    <form id="account-form">
      <div class="row">
        <div class="input-field col s12 m6">
          <label for="inputFirst">First Name</label>
          <input type="text" class="form-control" id="inputFirst" value="{{userInfo.firstName}}" placeholder="John">
        </div>

        <div class="input-field col s12 m6">
          <label for="inputLast">Last Name</label>
          <input type="text" class="form-control" id="inputLast" value="{{userInfo.lastName}}" placeholder="Doe">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m6">
          <label for="inputEmail">Email</label>
          <input type="text" class="form-control" id="inputEmail" value="{{userInfo.email}}" placeholder="Email">
        </div>
        <div class="input-field col s12 m6">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" id="inputPassword" value="{{userInfo.accountKey}}">
        </div>
      </div>

      <div class="row center-align">
        <button type="submit" id="update-account" class="btn btn-primary">SUBMIT CHANGES</button>
        <button href="#delete-account-modal" type="submit" id="delete-account" class="btn btn-primary modal-trigger">DELETE ACCOUNT</button>
        <button type="submit" id="view-account" class="btn btn-primary">REFRESH PAGE</button>
      </div>

    </form>
    <div class="modal" id="delete-account-modal">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Re-Enter Credentials to delete account</h5>
            </button>
          </div>

          <div class="modal-body">
            <h3 id="err-msg"></h3>
            <form>
              <div class="input-field">
                <label for="emailConfirm">Confirm Your Email</label>
                <input type="password" class="form-control" id="emailConfirm">
              </div>
            </form>
          </div>

          <div class="modal-footer">
            <button id="confirm-delete" type="button" class="btn btn-primary">Confirm Delete</button>
            <button type="button" class="btn btn-secondary modal-close">Nah I'll stay</button>
          </div>
        </div>

    </div>
  </div>
</div>