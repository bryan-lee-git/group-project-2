<main>
  {{!-- the arena battle ground where the images of the user and opponent duke it out --}}
  <div class="row">
    <div class="col s3 offset-s3 center-align">
      <img src="{{user.image}}" alt="user-combatant" class="responsive-img" id="user-combatant-img">
    </div>

    <div class="col s3 center-align">
      <img src="{{npc.image}}" alt="opponent-combatant" class="responsive-img" id="opponent-combatant-img">
    </div>
  </div>

  {{!-- users stats display table --}}
  <div class="row rounded-content-box">
    <div class="col s4">
      <table id="user-table">
        <thead>
          <tr>
            <th><span id="username-span">USER CHARACTER: {{user.name}}</span></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Stamina</td>
            <td><span id="user-stamina-span">{{user.stamina}}</span></td>
          </tr>
          <tr>
            <td>Strength</td>
            <td><span id="user-strength-span">{{user.strength}}</span></td>
          </tr>
          <tr>
            <td>Speed</td>
            <td><span id="user-speed-span">{{user.speed}}</span></td>
          </tr>
          <tr>
            <td>Skill</td>
            <td><span id="user-skill-span">{{user.skill}}</span></td>
          </tr>
        </tbody>
      </table>
    </div>

    {{!-- try to get some input fields in here--}}

    <div>
      <form action="#">
        <p class="range-field">
          <input type="range" id="test5" min="0" max={{user.speed}} />
        </p>
        <p class="range-field">
          <input type="range" id="test5" min="0" max={{user.speed}} />
        </p>
      </form>
    </div>

    {{!-- opponents stats display table --}}
    <div class="col s4 offset-s4 right-align">
      <table id="opponent-table">
        <thead>
          <tr>
            <th class="right-align"><span id="opponent-name-span">OPPONENT: {{npc.name}}</span></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td class="right-align">Strength</td>
            <td class="right-align"><span id="opponent-strength-span">{{npc.strength}}</span></td>
          </tr>
          <tr>
            <td class="right-align">Speed</td>
            <td class="right-align"><span id="opponent-speed-span">{{npc.speed}}</span></td>
          </tr>
          <tr>
            <td class="right-align">Stamina</td>
            <td class="right-align"><span id="opponent-stamina-span">{{npc.stamina}}</span></td>
          </tr>
          <tr>
            <td class="right-align">Skill</td>
            <td class="right-align"><span id="opponent-skill-span">{{npc.skill}}</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  {{!-- Fix action button, where the user will impliment their strategy in between turns --}}
  <div class="fixed-action-btn center-align" title="attack options">
    <a class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
      <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
      <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
      <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
      <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
    </ul>
  </div>
</main>